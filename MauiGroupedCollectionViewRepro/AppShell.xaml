<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="MauiGroupedCollectionViewRepro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiGroupedCollectionViewRepro" NavBarIsVisible="False" TabBarIsVisible="False">
    <Tab>
        <ShellContent
            Title="Collection"
            ContentTemplate="{DataTemplate local:GroupedCollectionPage}"
            Route="GroupedCollectionPage" />
    </Tab>
    <Tab>
        <ShellContent
            Title="List"
            ContentTemplate="{DataTemplate local:GroupedListPage}"
            Route="GroupedListPage" />
    </Tab>
    <Tab>
        <ShellContent
            Title="Simple"
            ContentTemplate="{DataTemplate local:SimpleCollectionPage}"
            Route="SimpleCollectionPage" />
    </Tab>
</Shell>